---
interface Props {
  text: string;
  href: string;
}

const { text, href } = Astro.props;
---

<li class="text-center inline-flex items-center">
  <a
    href={href}
    class="link block py-2 px-3 text-gray-900 rounded hover:font-bold md:hover:text-blue-700 md:p-0"
    data-navlink
  >
    <span>{text}</span>
  </a>
</li>