---
import { formatDate } from "../utils/fecha.formato";
import Section from "./Section.astro";
import { slugify } from "../utils/utils";

interface Props {
  title: string;
  pubDate: string;
  author: string;
  categoria: string;

  img: {
    src: string;
    alt: string;
  };
}

const { title, pubDate, img, author, categoria } = Astro.props;

const formattedDate = formatDate(pubDate);
---

<Section>
  <div class="flex flex-col items-center">
    <h1 class="px-14 pb-4 pt-6 text-center text-8xl md:text-4xl font-bold">
      {title}
    </h1>
    <div class="flex-col md:flex-row text-3xl md:text-lg mb-2 justify-center items-center p-3 border border-b-orange-400 rounded-md">
      <span>
        Autor: <span class="font-bold mr-6">{author}</span>
      </span>
      <span>{formattedDate}</span>
      <a href=`/categoria/${slugify(categoria)}/` class="bg-blue-800 text-slate-100 p-1 ml-6 rounded-md">{categoria}</a>
    </div>
  </div>
  <div class="flex justify-center items-center mx-auto">
    {
      img.src ? (
        <img src={img.src} alt={img.alt} class="w-full rounded-md" />
      ) : null
    }
  </div>
</Section>
