---
import Section from "./Section.astro";
---

 
  <div
    class="posts mt-8 leading-8 px-1"
  >
    <slot />
  </div>
 

<style is:global>
 
  .posts table {
    border-collapse: collapse;
    background-color: bisque;
    border-radius: 10px;
    border: 1px solid gray;
    padding: 40px;
    margin: 4rem 0px 4rem 0px;
  }
  .posts th {
    background-color: rgb(32, 218, 79);
    width: 5%;
  }
  .posts td {
    text-align: justify;
    padding: 5px;
    text-align: center;
  }
  .posts tr {
    padding: 0.8rem 1.5rem;
    border-bottom: solid 1px gray;
    text-align: center;
  }
  ul li,
  ol li {
    margin-left: 2rem;
  }
  @media (max-width: 768px) {
    

    li {
      font-size: 50px;
      line-height: 70px;
    }
    .posts tr {
      line-height: 60px;
    }
  }
</style>
