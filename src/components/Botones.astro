---
interface Props {
  urlboton: string;
  textobtn: string;
}
const { urlboton, textobtn } = Astro.props;
---

<button
  type="button"
  class="text-white bg-gradient-to-r from-blue-400 via-green-500 to-yellow-600 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-red-300 dark:focus:ring-red-800 font-medium rounded-lg text-4xl md:text-sm px-[5.25rem] md:px-5 py-2.5 text-center me-2 mb-2"
>
  <a href={urlboton}>
    <svg
      class="w-24 md:w-6 h-24 md:h-6 me-2"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
      class="icon icon-tabler icons-tabler-outline icon-tabler-health-recognition"
      ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
        d="M4 8v-2a2 2 0 0 1 2 -2h2"></path><path d="M4 16v2a2 2 0 0 0 2 2h2"
      ></path><path d="M16 4h2a2 2 0 0 1 2 2v2"></path><path
        d="M16 20h2a2 2 0 0 0 2 -2v-2"></path><path
        d="M8.603 9.61a2.04 2.04 0 0 1 2.912 0l.485 .39l.5 -.396a2.035 2.035 0 0 1 2.897 .007a2.104 2.104 0 0 1 0 2.949l-3.397 3.44l-3.397 -3.44a2.104 2.104 0 0 1 0 -2.95z"
      ></path></svg
    >
    {textobtn}
  </a>
</button>
