---
import { slugify } from "../utils/AppConfig";
import { formatDate } from "../utils/fecha.formato";

const { publicacionesRelacionadas } = Astro.props;
---

{
  publicacionesRelacionadas.map((post: any) => (
    <div class="mb-2 p-4 shadow-md rounded-md ">
      <h3 class="text-5xl md:text-lg mb-2">
        {" "}
        <a href={`${post.url}/`}>{post.frontmatter.title}</a>
      </h3>
      <p class="text-xs">{formatDate(post.frontmatter.pubDate)}</p>
    </div>
  ))
}
