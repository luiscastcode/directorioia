---
interface Props {
  titulocta2: string;
  titulobtncta2: string;
  urlcta2: string;
}
const { titulocta2, titulobtncta2, urlcta2 } = Astro.props;
---

<div
  class="w-full md:w-[900px] justify-center items-center mx-auto p-8 bg-white rounded-xl my-4"
>
  <h3 class="text-center text-6xl md:text-xl mb-2">{titulocta2}</h3>
  <div class="flex mx-auto my-6">
    <a
      href={urlcta2}
      class="flex justify-center mx-auto text-white bg-gradient-to-r from-purple-500 via-purple-600 to-purple-700 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-purple-300 dark:focus:ring-purple-800 font-bold rounded-lg text-7xl md:text-xl px-8 py-4 text-center me-2 mb-2 w-full"
    >
      {titulobtncta2}
    </a>
  </div>
</div>
